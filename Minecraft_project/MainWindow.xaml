<Window x:Class="Minecraft_project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minecraft_project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="210*"/>
            <ColumnDefinition Width="187*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textLogin" HorizontalAlignment="Left" Height="21" Margin="322,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" TextChanged="TextBox_TextChanged" Grid.ColumnSpan="2" Background="{x:Null}"/>
        <Button x:Name="mainButton" Grid.ColumnSpan="2" Content="Enter" HorizontalAlignment="Left" Height="50" Margin="322,240,0,0" VerticalAlignment="Top" Width="135" Click="mainButton_Click"/>
        <Label x:Name="welcome" Content="Hello, please &#xD;&#xA;input your name&#xD;&#xA;" HorizontalAlignment="Left" Margin="322,89,0,0" VerticalAlignment="Top" Width="135" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
